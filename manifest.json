{
  "manifest_version": 3,
  "name": "Crowley Marine Cache Cleaner",
  "version": "3.1.0",
  "description": "Adds a floating button to clear cache on Crowley Marine pages.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.crowleymarine.com/*",
    "*://crowleymarine.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Crowley Marine Cache Cleaner"
  },
  "content_scripts": [
    {
      "matches": ["*://*.crowleymarine.com/*", "*://crowleymarine.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}